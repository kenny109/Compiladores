int main {
showc: "hola mundo!"
}
function int factorial(num){
factorial=1;
if: num>1{
while: num>1{
factorial*=num;
num--; 
}
return factorial; 
}
else if: num<1 or num<=1{
 return 1; 
}
}
int main {
int num; 
showc: "ingrese el numero al que desea hallar factorial"; 
getc: num; 
showc: factorial(num);
}
function int factorial(num){
  if: num==1  or num==0{
  return 1; 
  }
  else {
  return num*factorial(num-1);
  }
}
int main { 
int num; 
showc: "ingrese el numero al que desea hallar su factorial";
getc: num; 
showc: factorial(num);
}
